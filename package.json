{
  "name": "xstate-marionettist-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/core",
      "packages/cypress",
      "packages/playwright",
      "examples/app"
    ]
  },
  "author": "John de Stigter <johndestigter@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjdestigter/xstate-marionettist.git"
  },
  "bugs": {
    "url": "https://github.com/rjdestigter/xstate-marionettist/issues"
  },
  "dependencies": {
    "@manypkg/cli": "^0.13.0",
    "typescript": "^4.1.0-dev.20201014"
  },
  "scripts": {
    "preinstall": "node ./scripts/ensure-yarn.js",
    "postinstall": "manypkg check",
    "clean:packages": "yarn workspaces run clean",
    "build": "tsc -b ./tsconfig.monorepo.json",
    "build:example": "cd examples/xstate-marionettist-example && npm run build",
    "::puppeteer": "cd examples/xstate-marionettist-example && npm run e2e:puppeteer",
    "::playwright": "cd examples/xstate-marionettist-example && npm run e2e:playwright",
    "::test": "concurrently \"npm run build\" \"npm run build:example\" && concurrently \"npm run puppeteer\" \"npm run playwright\"",
    "::prepare": "cd examples/xstate-marionettist-example && npm install",
    "::prepublishOnly": "CI=true NODE_ENV=production npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
